<div class="row">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4">
    <% if @post.errors.any? %>
      <ul>
      <% @post.errors.full_messages.each do |e| %>
        <li class="text-danger"><%= e %></li>
        <% end %>
      </ul>
    <% end %>
    <h3> Editing Post...</h3>
    <%= form_for @post, url: {action: "update"} do |f| %>
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
    <br>
    <%= f.text_area :body, rows: "15", class: "form-control rounded-20", placeholder: "Body..." %>
    <br>
    <%= f.file_field :main_picture, direct_upload: true %>
    <hr>
    <%= f.submit :Update %>
    <%= f.check_box :pinned, class: "checkbox" %>
    <%= "Pin This Post" %>
    <% end %>
    <br>
    <p> Or <%= link_to "Delete Whole Post", post_path(@post), method: "delete", data: { confirm: 'Are you sure?' }, class:"text-danger" %> permanently</p>
  </div>
</div>
