<div class="container">
    <% @posts.each do |p| %>
        <% if (p.created_at.strftime("%Y") != @year) %>
          <% @year = p.created_at.strftime("%Y") %>
          <% @month = nil %>
          <hr>
          <h4 style="font-weight:bold"><%= @year %></h4>
        <% end %>
        <% if (p.created_at.strftime("%B") != @month) %>
          <% @month = p.created_at.strftime("%B") %>
          <p><%= @month %></p>
        <% end %>
        <p><%= link_to p.title, post_path(p.id), style: "color:grey" %></p>
    <% end %>
</div>
