<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <% if @headerImage.errors.any? %>
        <ul>
        <% @headerImage.errors.full_messages.each do |e| %>
          <li class="text-danger"><%= e %></li>
          <% end %>
        </ul>
      <% end %>
      <hr>
      <%= form_for @headerImage, url: {action: "create"} do |f| %>
        <%= f.file_field :picture, direct_upload: true %>
        <%= f.hidden_field :title, value: "headerImage" %>
        <hr>
        <%= f.submit "Upload" %>
      <% end %>
    </div>
  </div>
</div>
