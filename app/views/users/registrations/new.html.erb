<div class="container text-center">
  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "form-control" %>

          <% if @minimum_password_length %>
          <em>(Password must be <%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control" %>

        <div class="actions">
          <br>
          <%= f.submit "Sign up", class: "btn btn-md btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
